{
  "name": "harmonic-team",
  "private": true,
  "scripts": {
    "build": "esbuild app/javascript/application.ts --bundle --sourcemap --outdir=app/assets/builds --format=esm --loader:.ts=ts",
    "build:watch": "esbuild app/javascript/application.ts --bundle --sourcemap --outdir=app/assets/builds --format=esm --loader:.ts=ts --watch=forever",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install chromium"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "@types/three": "^0.182.0",
    "cropperjs": "^1.6.2",
    "date-fns": "^3.6.0",
    "hotkeys-js": "^3.13.9",
    "stimulus-clipboard": "^4.0.1",
    "stimulus-dropdown": "^2.1.0",
    "stimulus-timeago": "^4.1.0",
    "stimulus-use": "^0.52.3",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.10.6",
    "esbuild": "^0.27.2",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  }
}
