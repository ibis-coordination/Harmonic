---
app: Harmonic
host: <%= "#{@current_tenant.subdomain}.#{ENV['HOSTNAME']}" %>
path: <%= @current_path %>
title: <%= raw @page_title %>
timestamp: <%= Time.now.utc %>
<% actions = available_actions_for_current_route -%>
<% if actions.any? -%>
actions:
<% actions.each do |action| -%>
  - name: <%= action[:name] %>
    description: <%= action[:description].to_s.gsub('"', '\\"') %>
    path: <%= action[:path] %>
<% if action[:params]&.any? -%>
    params:
<% action[:params].each do |param| -%>
      - name: <%= param[:name] %>
        type: <%= param[:type] %>
        required: <%= param[:required] %>
<% if param[:description] -%>
        description: <%= param[:description].to_s.gsub('"', '\\"') %>
<% end -%>
<% end -%>
<% end -%>
<% end -%>
<% end -%>
