<%# Settings sidebar variant - minimal sidebar for settings pages %>
<%# Shows only studio info and back link %>
<aside class="pulse-sidebar" data-mode="settings">
  <%= render 'pulse/sidebar_studio_info' %>

  <nav class="pulse-nav">
    <a href="<%= @current_collective.path %>" class="pulse-nav-item">
