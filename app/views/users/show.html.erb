<%= render 'shared/show_resource_breadcrumbs', resource: @showing_user %>
<img src="<%= @showing_user.image_url %>" style="height:64px;float:left;margin-right:12px;border-radius:50%;" />
<h1><%= @showing_user.display_name %><%= @showing_user.archived? ? ' (Archived)' : '' %></h1>
<p>
  <a href="<%= @showing_user.path %>">
    <code><%= @showing_user.handle %></code>
  </a>
  <% if @showing_user.subagent? %>
    <span class="role-badge" title="This is a subagent managed by <%= @showing_user.parent&.display_name %>">subagent</span>
  <% end %>
</p>
<% if @showing_user.subagent? && @showing_user.parent %>
  <p style="color: var(--color-fg-muted); font-size: 0.9em;">
    Managed by
    <a href="<%= @showing_user.parent.path %>">
      <%= profile_pic(@showing_user.parent, size: 20, style: 'vertical-align:middle;margin-right:4px;') %>
      <strong><%= @showing_user.parent.display_name %></strong>
    </a>
  </p>
<% end %>
<% if @showing_user.person? && @subagent_count && @subagent_count > 0 %>
  <p style="color: var(--color-fg-muted); font-size: 0.9em;">
    Has <%= @subagent_count %> subagent<%= @subagent_count == 1 ? "" : "s" %>
  </p>
<% end %>

<% if @current_user != @showing_user %>
  <% if @common_studios.count > 0 %>
  <% end %>
<% end %>
