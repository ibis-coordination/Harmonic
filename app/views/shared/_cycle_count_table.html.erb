<table class="pulse-table">
  <thead>
    <tr>
      <th></th>
      <% cycles.each do |cycle| %>
        <th>
          <a
            title="<%= cycle.display_window %>"
            href="<%= cycle.path %>"
            class="pulse-link"
          ><%= cycle.display_name %>
          </a>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% ['Notes', 'Decisions', 'Commitments'].each do |type| %>
      <% count_key = type.downcase.to_sym %>
      <tr>
        <td>
          <img src="/resource-icons/<%= type.singularize.downcase %>-icon.svg" alt="" class="pulse-resource-icon">
          <strong><%= type %></strong>
        </td>
        <% cycles.each do |cycle| %>
          <% c = cycle.counts[count_key] %>
          <td>
            <% if c == 0 %>
              <span class="pulse-muted">0</span>
            <% else %>
              <%= c %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
