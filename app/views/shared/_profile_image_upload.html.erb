<link rel="stylesheet" href="<%= asset_path 'image_cropper.css' %>">
<% size ||= 64 %>

<div class="profile-image-upload">
  <div class="profile-image-container" id="profile-image-container">
    <img src="<%= resource.image_url %>" id="profile-image" alt="<%= resource.respond_to?(:name) ? resource.name : 'Profile' %> image">
    <div class="profile-image-overlay">
      <span class="profile-image-overlay-text">Change Image</span>
    </div>
  </div>
</div>

<%= form_with url: "#{resource.path}/image", method: :patch, local: true, html: { multipart: true, id: 'profile-image-form' } do |form| %>
  <%= form.file_field :profile_image, style: 'display: none;', id: 'profile-image-input', accept: 'image/*' %>
  <%= form.hidden_field :cropped_image_data, id: 'cropped-image-data' %>
<% end %>

<!-- Modal for cropping the image -->
<div id="cropper-modal" class="cropper-modal-overlay">
  <div class="cropper-modal-content">
    <div class="cropper-modal-header">
      <h3>Crop Image</h3>
      <button type="button" id="cropper-cancel" class="cropper-cancel-btn">&times;</button>
    </div>
    <div class="cropper-modal-body">
      <img id="cropper-image" src="" alt="Crop preview">
    </div>
    <div class="cropper-modal-footer">
      <button type="button" id="crop-button" class="pulse-action-btn">Save Image</button>
    </div>
  </div>
</div>

<style>
  .profile-image-upload {
    display: inline-block;
  }

  .profile-image-container {
    position: relative;
    width: <%= size %>px;
    height: <%= size %>px;
    cursor: pointer;
    border-radius: 8px;
    overflow: hidden;
    border: 2px dashed var(--color-border-default, #d1d5db);
    transition: border-color 0.2s;
  }

  .profile-image-container:hover {
    border-color: var(--color-fg-muted, #6b7280);
  }

  .profile-image-container:hover .profile-image-overlay {
    opacity: 1;
  }

  #profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .profile-image-overlay-text {
    color: white;
    font-size: 11px;
    font-weight: 500;
    text-align: center;
    padding: 4px;
  }

  /* Cropper Modal Styles */
  .cropper-modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .cropper-modal-overlay[style*="display: block"] {
    display: flex !important;
  }

  .cropper-modal-content {
    background: var(--color-canvas-default, white);
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    max-width: 400px;
    width: 90%;
    max-height: 90vh;
    overflow: hidden;
  }

  .cropper-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 20px;
    border-bottom: 1px solid var(--color-border-default, #e5e7eb);
  }

  .cropper-modal-header h3 {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    color: var(--color-fg-default, #1f2937);
  }

  .cropper-cancel-btn {
    background: none;
    border: none;
    font-size: 24px;
    color: var(--color-fg-muted, #6b7280);
    cursor: pointer;
    padding: 0;
    line-height: 1;
  }

  .cropper-cancel-btn:hover {
    color: var(--color-fg-default, #1f2937);
  }

  .cropper-modal-body {
    padding: 20px;
    max-height: 300px;
    overflow: hidden;
  }

  .cropper-modal-body img {
    max-width: 100%;
    display: block;
  }

  .cropper-modal-footer {
    padding: 16px 20px;
    border-top: 1px solid var(--color-border-default, #e5e7eb);
    display: flex;
    justify-content: flex-end;
    gap: 12px;
  }
</style>
