<% options = [] %>
<% studio_user = @current_user.studio_users.find_by(studio: studio) %>
<% invite = studio_user.can_invite? ? 'invite' : nil %>
<% representation = 'representation' %>
<% options << invite if invite %>
<% options << representation if representation %>
<% settings = studio_user.is_admin? ? 'settings' : nil %>
<% options << '---' if settings %>
<% options << settings if settings %>
<% options << 'manage_team' if studio_user.is_admin? %>
<%= render 'shared/more_button', studio: studio, resource: studio, options: options %>