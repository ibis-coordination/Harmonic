<%# User Profile Page Mockup - Uses minimal sidebar mode %>

<%= render 'shared/pulse_breadcrumb', items: [
  ['Component Library', '/dev/pulse'],
  ['Users', '#'],
  @dummy_user.display_name
] %>

<article class="pulse-user-profile">
  <header class="pulse-user-header">
    <div class="pulse-user-avatar-large">
      <span class="pulse-avatar-initials">JD</span>
    </div>
    <div class="pulse-user-info">
      <h1 class="pulse-user-name"><%= @dummy_user.display_name %></h1>
      <p class="pulse-user-handle">@<%= @dummy_user.handle %></p>
    </div>
    <div class="pulse-user-actions">
      <button class="pulse-action-btn">
        <%= octicon 'gear', height: 14 %>
        Edit Profile
      </button>
    </div>
  </header>

  <%# User Stats %>
  <div class="pulse-user-stats">
    <div class="pulse-stat">
      <span class="pulse-stat-value">12</span>
      <span class="pulse-stat-label">Notes</span>
    </div>
    <div class="pulse-stat">
      <span class="pulse-stat-value">5</span>
      <span class="pulse-stat-label">Decisions</span>
    </div>
    <div class="pulse-stat">
      <span class="pulse-stat-value">8</span>
      <span class="pulse-stat-label">Commitments</span>
    </div>
    <div class="pulse-stat">
      <span class="pulse-stat-value">3</span>
      <span class="pulse-stat-label">Studios</span>
    </div>
  </div>

  <%# Recent Activity %>
  <%= render 'shared/pulse_accordion', title: 'Recent Activity', count: 5, open: true do %>
    <div class="pulse-activity-list">
      <div class="pulse-activity-item">
        <div class="pulse-activity-icon">
          <img src="/resource-icons/note-icon.svg" class="pulse-resource-icon" alt="">
        </div>
        <div class="pulse-activity-content">
          <a href="#" class="pulse-activity-title">Pulse Design System Migration Plan</a>
          <p class="pulse-activity-meta">Created 2 hours ago in Design Team</p>
        </div>
      </div>
      <div class="pulse-activity-item">
        <div class="pulse-activity-icon">
          <%= octicon 'check-circle', height: 14 %>
        </div>
        <div class="pulse-activity-content">
          <span class="pulse-activity-title">Voted on "Should we adopt the new design system?"</span>
          <p class="pulse-activity-meta">1 day ago</p>
        </div>
      </div>
      <div class="pulse-activity-item">
        <div class="pulse-activity-icon">
          <%= octicon 'person-add', height: 14 %>
        </div>
        <div class="pulse-activity-content">
          <span class="pulse-activity-title">Joined "Complete component library documentation"</span>
          <p class="pulse-activity-meta">3 days ago</p>
        </div>
      </div>
    </div>
  <% end %>

  <%# Studios Membership %>
  <%= render 'shared/pulse_accordion', title: 'Studios', count: 3 do %>
    <div class="pulse-studios-list">
      <div class="pulse-studio-item">
        <div class="pulse-author-avatar">
          <span class="pulse-avatar-initials">DT</span>
        </div>
        <div class="pulse-studio-info">
          <a href="#" class="pulse-studio-name">Design Team</a>
          <span class="pulse-studio-role">Admin</span>
        </div>
      </div>
      <div class="pulse-studio-item">
        <div class="pulse-author-avatar">
          <span class="pulse-avatar-initials">EN</span>
        </div>
        <div class="pulse-studio-info">
          <a href="#" class="pulse-studio-name">Engineering</a>
          <span class="pulse-studio-role">Member</span>
        </div>
      </div>
      <div class="pulse-studio-item">
        <div class="pulse-author-avatar">
          <span class="pulse-avatar-initials">PM</span>
        </div>
        <div class="pulse-studio-info">
          <a href="#" class="pulse-studio-name">Product</a>
          <span class="pulse-studio-role">Member</span>
        </div>
      </div>
    </div>
  <% end %>

  <%# API Tokens %>
  <%= render 'shared/pulse_accordion', title: 'API Tokens', count: 1 do %>
    <div class="pulse-tokens-list">
      <div class="pulse-token-item">
        <div class="pulse-token-info">
          <span class="pulse-token-name">Development Token</span>
          <span class="pulse-token-created">Created Jan 15, 2025</span>
        </div>
        <button class="pulse-action-btn-danger">Revoke</button>
      </div>
    </div>
    <div class="pulse-form-actions" style="margin-top: 16px;">
      <button class="pulse-action-btn">
        <%= octicon 'key', height: 14 %>
        Create New Token
      </button>
    </div>
  <% end %>
</article>
