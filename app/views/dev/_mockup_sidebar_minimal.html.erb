<%# Mockup minimal sidebar for dev pages %>
<aside class="pulse-sidebar" data-mode="minimal">
  <%# User Info %>
  <div class="pulse-sidebar-section">
    <div class="pulse-studio-header">
      <div class="pulse-studio-avatar">
        <span class="pulse-avatar-initials">JD</span>
      </div>
      <div class="pulse-studio-details">
        <a href="#" class="pulse-studio-name">Jane Developer</a>
        <div class="pulse-studio-meta">
          <span class="pulse-timestamp">@janedev</span>
        </div>
      </div>
    </div>
  </div>

  <%# Navigation %>
  <nav class="pulse-nav">
    <a href="/dev/pulse" class="pulse-nav-item">
      <%= octicon 'arrow-left', height: 16 %>
      <span>Back to Library</span>
    </a>
    <a href="/dev/pulse/user" class="pulse-nav-item">
      <%= octicon 'person', height: 16 %>
      <span>Profile</span>
    </a>
    <a href="/dev/pulse/notifications" class="pulse-nav-item">
      <%= octicon 'bell', height: 16 %>
      <span>Notifications</span>
    </a>
    <a href="#" class="pulse-nav-item">
      <%= octicon 'gear', height: 16 %>
      <span>Settings</span>
    </a>
  </nav>

  <%# Studios Section %>
  <div class="pulse-sidebar-section">
    <div class="pulse-section-label">
      <%= octicon 'organization', height: 14 %>
      Your Studios
    </div>
    <div class="pulse-studios-list" style="padding: 0 12px;">
      <a href="#" class="pulse-link-item">Design Team</a>
      <a href="#" class="pulse-link-item">Engineering</a>
      <a href="#" class="pulse-link-item">Product</a>
    </div>
  </div>
</aside>
