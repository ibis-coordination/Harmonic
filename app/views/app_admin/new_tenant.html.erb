<%= render 'shared/pulse_breadcrumb', items: [
  [@current_tenant.subdomain, '/'],
  ['App Admin', '/app-admin'],
  ['Tenants', '/app-admin/tenants'],
  'New'
] %>

<h1 class="pulse-page-title">
  <%= octicon 'plus', height: 24 %> Create New Tenant
</h1>

<%= form_tag '/app-admin/tenants', method: :post do %>
  <div class="pulse-form-group">
    <label for="name" class="pulse-form-label">Tenant Name</label>
    <input type="text" name="name" id="name" class="pulse-form-input" placeholder="My Company" required>
    <p class="pulse-form-hint">The display name for this tenant.</p>
  </div>

  <div class="pulse-form-group">
    <label for="subdomain" class="pulse-form-label">Subdomain</label>
    <div style="display: flex; align-items: center; gap: 4px;">
      <input type="text" name="subdomain" id="subdomain" class="pulse-form-input" style="flex: 0 0 200px;" placeholder="mycompany" required pattern="[a-z0-9-]+" title="Lowercase letters, numbers, and hyphens only">
      <span class="pulse-body-text-muted">.<%= ENV['HOSTNAME'] %></span>
    </div>
    <p class="pulse-form-hint">Lowercase letters, numbers, and hyphens only.</p>
  </div>

  <div class="pulse-form-actions">
    <button type="submit" class="pulse-action-btn">
      <%= octicon 'plus', height: 14 %> Create Tenant
    </button>
    <a href="/app-admin/tenants" class="pulse-action-btn-secondary">Cancel</a>
  </div>
<% end %>
