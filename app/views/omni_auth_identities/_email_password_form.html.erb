<%= form_with url: "/auth/identity/callback", method: :post, data: { turbo: false }, class: "pulse-auth-form" do |form| %>
  <%= form.email_field :auth_key, placeholder: 'Email', class: 'pulse-form-input', tabindex: 1 %>
  <%= form.password_field :password, placeholder: 'Password', class: 'pulse-form-input', tabindex: 2 %>
  <div style="text-align:right;margin-bottom:16px;">
    <%= link_to 'Forgot your password?', new_password_reset_path, class: 'pulse-auth-link', tabindex: 4 %>
  </div>
  <div class="pulse-form-actions">
    <%= submit_tag "Log in", class: "pulse-action-btn", style: "width:100%;", tabindex: 3 %>
  </div>
  <div class="pulse-auth-footer">
    Don't have an account? <%= link_to 'Create one', '/auth/identity/register', class: 'pulse-auth-link', tabindex: 5 %>
  </div>
<% end %>
