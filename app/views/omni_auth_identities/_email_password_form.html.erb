<%= form_with url: "/auth/identity/callback", method: :post, data: { turbo: false } do |form| %>
  <%= form.email_field :auth_key, placeholder: 'Email', style: "margin-top:10px;", tabindex: 1 %>
  <div style="text-align:right;margin:0 10px 0 0;">
    <%= link_to 'Forgot your password?', new_password_reset_path, style: 'font-size: 12px;', tabindex: 4 %>
  </div>
  <%= form.password_field :password, placeholder: 'Password', tabindex: 2 %>
  <%= submit_tag "Log in", style: "margin-top:24px;", tabindex: 3 %>
  <br/>
  or
  <br/>
  <%= link_to 'Create a new account', '/auth/identity/register', tabindex: 5 %>
<% end %>