<link rel="stylesheet" href="<%= asset_path 'registration_form.css' %>">
<script type="module" src="<%= asset_path 'registration_form.js' %>"></script>

<div class="pulse-auth-page">
  <div class="pulse-auth-logo">
    <img src="/tri-logo.svg" alt="Harmonic">
  </div>

  <h1 class="pulse-auth-title">Set new password</h1>

  <p class="pulse-auth-subtitle">
    Enter your new password for <strong><%= @identity.email %></strong>
  </p>

  <%= form_with url: password_reset_path(@identity.reset_password_token), method: :patch, data: { turbo: false }, id: "password-reset-form", class: "pulse-auth-form" do |form| %>
    <div id="password-feedback" class="password-feedback"></div>
    <%= form.password_field :password, placeholder: 'New password (minimum 14 characters)',
        id: 'password-field',
        class: 'pulse-form-input',
        minlength: 14,
        required: true %>

    <div id="password-confirmation-feedback" class="password-feedback"></div>
    <%= form.password_field :password_confirmation, placeholder: 'Confirm new password',
        id: 'password-confirmation-field',
        class: 'pulse-form-input',
        minlength: 14,
        required: true %>

    <div class="pulse-form-actions">
      <%= submit_tag "Update password", id: "submit-button", class: "pulse-action-btn", style: "width:100%;", disabled: true %>
    </div>
    <div class="pulse-auth-footer">
      <%= link_to 'Request a new reset link', new_password_reset_path, class: 'pulse-auth-link' %>
    </div>
  <% end %>
</div>
