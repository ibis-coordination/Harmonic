<%= render 'shared/pulse_breadcrumb', items: [
  ['AI Agents', '/ai-agents'],
  @ai_agent.display_name
] %>

<article class="pulse-resource-detail">
  <header class="pulse-resource-header">
    <div class="pulse-resource-header-top">
      <span class="pulse-resource-type-label">
        <%= octicon 'command-palette', height: 14, class: 'pulse-resource-icon' %>
        AI Agent
      </span>
    </div>
    <h1 class="pulse-resource-title"><%= @ai_agent.display_name %></h1>
    <p class="pulse-resource-subtitle">
      Handle: <code><%= @ai_agent.handle %></code>
      · Mode: <%= @ai_agent.internal_ai_agent? ? "Internal" : "External" %>
      <% if @ai_agent.internal_ai_agent? %>
        · Model: <code><%= @ai_agent.agent_configuration&.dig("model") || "default" %></code>
      <% end %>
    </p>
  </header>

  <div class="pulse-resource-body">
    <% if flash[:notice] %>
      <div class="pulse-notice pulse-notice-success" style="margin-bottom: 20px;">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if @token && @token.plaintext_token.present? %>
      <section class="pulse-settings-section">
        <h3>API Token</h3>
        <div class="pulse-notice pulse-notice-warning" style="margin-bottom: 12px;">
          <strong>Important:</strong> Save this API token now. You won't be able to see the full token again.
        </div>
        <table class="pulse-table" style="width: auto;">
          <tbody>
            <tr>
              <th style="text-align: left; padding-right: 24px;">API Token</th>
              <td>
                <code class="pulse-monospace"><%= @token.plaintext_token %></code>
                <span data-controller="clipboard">
                  <input type="text" value="<%= @token.plaintext_token %>" data-clipboard-target="source" style="display:none;"/>
                  <button class="pulse-action-btn pulse-action-btn-sm" data-action="click->clipboard#copy">
                    <span data-clipboard-target="button"><%= octicon 'copy' %> Copy</span>
                    <span class="pulse-tag pulse-tag-success" data-clipboard-target="successMessage" style="display:none;">Copied!</span>
                  </button>
                </span>
              </td>
            </tr>
            <tr>
              <th style="text-align: left; padding-right: 24px;">Token Expires</th>
              <td>in <%= time_ago_in_words(@token.expires_at) %></td>
            </tr>
          </tbody>
        </table>
      </section>
    <% end %>

    <p class="pulse-action-row">
      <a href="<%= ai_agent_run_task_path(@ai_agent.handle) %>" class="pulse-action-btn pulse-action-btn-primary">
        <%= octicon 'play' %> Run Task
      </a>
      <a href="/ai-agents/<%= @ai_agent.handle %>/automations" class="pulse-action-btn">
        <%= octicon 'zap' %> Automations
      </a>
      <a href="/ai-agents/<%= @ai_agent.handle %>/settings" class="pulse-action-btn">
        <%= octicon 'gear' %> Settings
      </a>
      <a href="<%= @ai_agent.path %>" class="pulse-action-btn">
        <%= octicon 'person' %> View Profile
      </a>
    </p>

    <% if @automation_rules.any? %>
      <section class="pulse-settings-section">
        <h3>Automations</h3>
        <table class="pulse-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Trigger</th>
              <th>Status</th>
              <th>Runs</th>
            </tr>
          </thead>
          <tbody>
            <% @automation_rules.each do |rule| %>
              <tr>
                <td>
                  <a href="/ai-agents/<%= @ai_agent.handle %>/automations/<%= rule.truncated_id %>" class="pulse-link">
                    <%= rule.name %>
                  </a>
                </td>
                <td>
                  <span class="pulse-tag"><%= rule.trigger_type %></span>
                  <% if rule.trigger_type == 'event' %>
                    <small class="pulse-hint"><%= rule.event_type %></small>
                  <% end %>
                </td>
                <td>
                  <% if rule.enabled? %>
                    <span class="pulse-tag pulse-tag-success">Enabled</span>
                  <% else %>
                    <span class="pulse-tag">Disabled</span>
                  <% end %>
                </td>
                <td><%= rule.execution_count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <p><a href="/ai-agents/<%= @ai_agent.handle %>/automations" class="pulse-link">View all automations →</a></p>
      </section>
    <% else %>
      <section class="pulse-settings-section">
        <h3>Automations</h3>
        <p class="pulse-muted">No automations configured yet.</p>
        <p>
          <a href="/ai-agents/<%= @ai_agent.handle %>/automations/new" class="pulse-action-btn">
            <%= octicon 'plus' %> Create Automation
          </a>
        </p>
      </section>
    <% end %>

    <% if @recent_runs.any? %>
      <section class="pulse-settings-section">
        <h3>Recent Task Runs</h3>
        <table class="pulse-table">
          <thead>
            <tr>
              <th>Time</th>
              <th>Status</th>
              <th>Task</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_runs.each do |run| %>
              <tr>
                <td>
                  <a href="<%= ai_agent_run_path(@ai_agent.handle, run.id) %>" class="pulse-link">
                    <%= time_ago_in_words(run.created_at) %> ago
                  </a>
                </td>
                <td>
                  <span class="pulse-badge <%= run.status_badge_class %>">
                    <% case run.status %>
                    <% when "completed" %>
                      <%= run.success ? 'Success' : 'Failed' %>
                    <% when "running" %>
                      Running
                    <% when "queued" %>
                      Queued
                    <% else %>
                      <%= run.status.titleize %>
                    <% end %>
                  </span>
                </td>
                <td><%= truncate(run.task, length: 60) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <p><a href="<%= ai_agent_runs_path(@ai_agent.handle) %>" class="pulse-link">View all runs →</a></p>
      </section>
    <% else %>
      <section class="pulse-settings-section">
        <h3>Recent Task Runs</h3>
        <p class="pulse-muted">No task runs yet.</p>
      </section>
    <% end %>
  </div>
</article>
