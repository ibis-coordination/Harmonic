<%= render 'shared/pulse_breadcrumb', items: [
  ['Home', '/'],
  ['My AI Agents', ai_agents_path],
  [@ai_agent.name, ai_agent_run_task_path(@ai_agent.handle)],
  'Task Runs'
] %>

<article class="pulse-resource-detail">
  <header class="pulse-resource-header">
    <div class="pulse-resource-header-top">
      <span class="pulse-resource-type-label">
        <%= octicon 'command-palette', height: 14, class: 'pulse-resource-icon' %>
        Task Runs
      </span>
      <a href="<%= ai_agent_run_task_path(@ai_agent.handle) %>" class="pulse-feed-action-link" style="margin-left: auto;">
        <%= octicon 'play', height: 14 %> Run New Task
      </a>
    </div>
    <h1 class="pulse-resource-title">Task Runs for <%= @ai_agent.name %></h1>
  </header>

  <div class="pulse-resource-body">
    <div class="pulse-ai-agent-card" style="margin-bottom: 24px;">
      <div class="pulse-ai-agent-header">
        <img src="<%= @ai_agent.image_url %>" alt="<%= @ai_agent.name %>" class="pulse-ai-agent-avatar">
        <div class="pulse-ai-agent-info">
          <div class="pulse-ai-agent-name">
            <a href="<%= @ai_agent.path %>"><%= @ai_agent.name %></a>
          </div>
          <% total_cost = @task_runs.sum { |r| r.estimated_cost_usd || 0 } %>
          <% if total_cost&.positive? %>
            <span class="pulse-ai-agent-meta">Total Est. Cost: $<%= format("%.2f", total_cost) %></span>
          <% end %>
        </div>
      </div>
    </div>

    <% if @task_runs.any? %>
      <div class="pulse-feed">
        <% @task_runs.each do |task_run| %>
          <article class="pulse-feed-item">
            <div class="pulse-feed-item-header">
              <div class="pulse-feed-item-type">
                <% if task_run.success %>
                  <%= octicon 'check-circle-fill', height: 14, style: 'color: var(--color-success-fg);' %>
                <% elsif task_run.failed? %>
                  <%= octicon 'x-circle-fill', height: 14, style: 'color: var(--color-danger-fg);' %>
                <% elsif task_run.running? %>
                  <%= octicon 'sync', height: 14 %>
                <% else %>
                  <%= octicon 'dot', height: 14 %>
                <% end %>
                <%= task_run.status.upcase %>
              </div>
              <div class="pulse-feed-item-meta">
                <span><code style="font-size: 11px;"><%= task_run.model || "default" %></code></span>
                <span>&middot;</span>
                <span><%= task_run.steps_count %> steps</span>
                <% if task_run.formatted_duration %>
                  <span>&middot;</span>
                  <span><%= task_run.formatted_duration %></span>
                <% end %>
                <% if task_run.formatted_cost %>
                  <span>&middot;</span>
                  <span><%= task_run.formatted_cost %></span>
                <% end %>
                <span>&middot;</span>
                <span><%= timeago(task_run.created_at) %></span>
              </div>
            </div>

            <div class="pulse-feed-item-body">
              <div class="pulse-feed-item-title">
                <a href="<%= ai_agent_run_path(@ai_agent.handle, task_run.id) %>">
                  <%= task_run.task_summary %>
                </a>
              </div>
              <% if task_run.final_message.present? %>
                <p class="pulse-muted" style="margin: 8px 0 0 0; font-size: 13px;">
                  <%= truncate(task_run.final_message, length: 150) %>
                </p>
              <% end %>
            </div>
          </article>
        <% end %>
      </div>
    <% else %>
      <div class="pulse-empty-state" style="text-align: center; padding: 48px 24px;">
        <%= octicon 'history', height: 48, class: 'pulse-muted' %>
        <h3 style="margin: 16px 0 8px 0;">No Task Runs Yet</h3>
        <p class="pulse-muted" style="margin-bottom: 16px;">Run a task with this AI agent to see execution history.</p>
        <a href="<%= ai_agent_run_task_path(@ai_agent.handle) %>" class="pulse-action-btn">
          <%= octicon 'play', height: 14 %>
          Run Task
        </a>
      </div>
    <% end %>
  </div>
</article>
